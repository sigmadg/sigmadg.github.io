
{% if section.blocks.size > 0 %}
{% case section.settings.grid %}
{% when '1' %}
{% when '2' %}
{%- assign column = 'two-column' -%}
{% when '3' %}
{%- assign column = 'three-column' -%}              
{% when '4' %}
{%- assign column = 'four-column' -%}              
{% else %}
{%- assign column = 'three-column' -%}              
{% endcase %} 
{% endif %}


{% if section.settings.enable_grid_style %}
{% assign grid_style = 'dt-sc-grid-style' %}
{% endif %}

{% if section.settings.enable_overlay %}
{% assign section_overlay = 'dt-sc-overlay' %}
{% endif %}

{% case section.settings.background_style %}
{% when 'default' %}
{% when 'parallax' %}
{%- assign background_style = 'data-speed="2"' %}
{% when 'fixed' %}
{%- assign background_style = 'data-speed="1"' %}
{% endcase %} 

{% if section.settings.show_background_image %}
{% assign lazyScript = "lazyload" %}
{% endif %}

<div class="dt-sc-section-wrapper {{lazyScript}} {{section_overlay}} {% if section.settings.background_style == 'parallax' %} parallax-initiated{% endif %}" style="{% render 'bg-color-image-padding' %}" data-style="parallax" {{background_style}} {% include 'bg_image' %}>  
  <div class="{% render 'container-settings' %}"> 
    <div class="row {{ section.settings.custom_class_name }}">   
      {% render 'section-heading', class: section.id %}   
      <div class="dt-sc-promo-blocks-section dt-sc-column {{grid_style}} three-column {{section.settings.block_style}} {{section.settings.vertical_position}}">
        <div class="promo-blocks_left">
          {% if section.settings.promo_1_link != blank %}
          <a href="{{section.section.promo_1_link}}">
            {% endif %}
            {% if section.settings.promo_1 != blank %}
            <div class="dt-sc-promo-icon-image">
              {%- assign img_1_url = section.settings.promo_1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img class="lazyload"
                   data-src="{{ img_1_url }}"
                   data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                   data-aspectratio="{{ section.settings.promo_1.aspect_ratio }}"
                   data-sizes="auto"            
                   alt="{{ section.settings.promo_1.alt | escape }}">            
              <noscript>
                {{ section.settings.promo_1 | img_url: '480x480', scale: 2 | img_tag: section.settings.promo_1.alt, 'dt-sc-noscript-image' }}
              </noscript>
            </div>
            {% endif%}    
            {% if section.settings.promo_1_link != blank %}
          </a>
          {% endif %}
        </div>
       
        <div class="promo-blocks_center" style="width:400px;">    
         <div class="promo-block_swiper swiper-container">            
            <div class="swiper-wrapper">
              {% if section.blocks.size > 0 %}               
              {% for block in section.blocks %}           
              {% if block.type == 'icon' %}
              <div class="promo-blocks_center swiper-slide">
                {% if block.settings.promo != blank %}
                <div class="dt-sc-promo-icon-main-image">                
                  <img src="{{ block.settings.promo | img_url: '700x700' }}" alt="{{ block.settings.promo.alt | escape }}">                            
                </div>
                {% endif%} 
                <div class="dt-sc-promo-block {{ section.settings.text_position}} {% if section.settings.reverse_column %}dt-sc-reverse-columns{% endif %}">    
                  {% if block.settings.title != blank  %}  
                  <h2 class="dt-sc-promo-heading">{{ block.settings.title }}</h2>
                  {% endif %} 

                  {% if block.settings.icon1 != blank %}
                  <div class="dt-sc-promo-icon-image">
                    {%- assign img_url = block.settings.icon1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    <img class="lazyload"
                         data-src="{{ img_url }}"
                         data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                         data-aspectratio="{{ section.settings.icon1.aspect_ratio }}"
                         data-sizes="auto"            
                         alt="{{ block.settings.block_image.alt | escape }}">            
                    <noscript>
                      {{ block.settings.icon1 | img_url: '480x480', scale: 2 | img_tag: block.settings.icon1.alt, 'dt-sc-noscript-image' }}
                    </noscript>
                  </div>          
                  {% endif%}     
                  <div class="dt-sc-promo-content">
                    {% if block.settings.desc1 != blank  %}  
                    <p class="dt-sc-promo-description"> {{ block.settings.desc1}}</p>
                    {% endif %}           
                  </div>
                  {% if block.settings.icon2 != blank %}
                  <div class="dt-sc-promo-icon-image">
                    {%- assign img_url = block.settings.icon2 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    <img class="lazyload"
                         data-src="{{ img_url }}"
                         data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                         data-aspectratio="{{ section.settings.icon2.aspect_ratio }}"
                         data-sizes="auto"            
                         alt="{{ block.settings.block_image.alt | escape }}">            
                    <noscript>
                      {{ block.settings.icon2 | img_url: '480x480', scale: 2 | img_tag: block.settings.icon2.alt, 'dt-sc-noscript-image' }}
                    </noscript>
                  </div>          
                  {% endif%}     
                  <div class="dt-sc-promo-content">
                    {% if block.settings.desc2 != blank  %}  
                    <p class="dt-sc-promo-description"> {{ block.settings.desc2}}</p>
                    {% endif %}           
                  </div>
                  {% if block.settings.icon3 != blank %}
                  <div class="dt-sc-promo-icon-image">
                    {%- assign img_url = block.settings.icon3 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    <img class="lazyload"
                         data-src="{{ img_url }}"
                         data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                         data-aspectratio="{{ section.settings.icon3.aspect_ratio }}"
                         data-sizes="auto"            
                         alt="{{ block.settings.block_image.alt | escape }}">            
                    <noscript>
                      {{ block.settings.icon3 | img_url: '480x480', scale: 2 | img_tag: block.settings.icon3.alt, 'dt-sc-noscript-image' }}
                    </noscript>
                  </div>          
                  {% endif%}     
                  <div class="dt-sc-promo-content">
                    {% if block.settings.desc3 != blank  %}  
                    <p class="dt-sc-promo-description"> {{ block.settings.desc3}}</p>
                    {% endif %}           
                  </div>
                </div>
              </div>
              {% endif %}

              {% if block.type == 'class' %}
              <div class="promo-blocks_center  swiper-slide">
                {% if block.settings.promo != blank %}
                <div class="dt-sc-promo-icon-main-image">                
                  <img src="{{ block.settings.promo | img_url: '700x700' }}" alt="{{ block.settings.promo.alt | escape }}">                            
                </div>
                {% endif%} 
                <div class="dt-sc-promo-block {{ section.settings.text_position}} {% if section.settings.reverse_column %}dt-sc-reverse-columns{% endif %}">
                  {% if block.settings.title != blank  %}  
                  <h5 class="dt-sc-promo-heading">{{ block.settings.title }}</h5>
                  {% endif %} 

                  {% if block.settings.class1 != blank %}
                  <div class="dt-sc-promo-icon-image">
                    <i class="{{block.settings.class1}}"></i>
                  </div>
                  {% endif%}     
                  <div class="dt-sc-promo-content">           
                    {% if block.settings.desc1 != blank  %}  
                    <p class="dt-sc-promo-description"> {{ block.settings.desc1}}</p>
                    {% endif %}          
                  </div>
                  {% if block.settings.class2 != blank %}
                  <div class="dt-sc-promo-icon-image">
                    <i class="{{block.settings.class2}}"></i>
                  </div>
                  {% endif%}     
                  <div class="dt-sc-promo-content">           
                    {% if block.settings.desc2 != blank  %}  
                    <p class="dt-sc-promo-description"> {{ block.settings.desc2}}</p>
                    {% endif %}          
                  </div>
                  {% if block.settings.class3 != blank %}
                  <div class="dt-sc-promo-icon-image">
                    <i class="{{block.settings.class3}}"></i>
                  </div>
                  {% endif%}     
                  <div class="dt-sc-promo-content">           
                    {% if block.settings.desc3 != blank  %}  
                    <p class="dt-sc-promo-description"> {{ block.settings.desc3}}</p>
                    {% endif %}          
                  </div>
                </div>
              </div>
              {% endif %}               
              {% endfor %}  
              {% endif %}  
              <div class="swiper-pagination swiper-pagination-white"></div>
            </div>            
          </div>
        </div>
        <div class="promo-blocks_right">
          {% if section.settings.promo_2_link != blank %}
          <a href="{{section.section.promo_2_link}}">
            {% endif %}
            {% if section.settings.promo_2 != blank %}
            <div class="dt-sc-promo-icon-image">
              {%- assign img_2_url = section.settings.promo_2 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
