                   data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                   data-aspectratio="{{ section.settings.promo_2.aspect_ratio }}"
                   data-sizes="auto"            
                   alt="{{ section.settings.promo_2.alt | escape }}">            
              <noscript>
                {{ section.settings.promo_2 | img_url: '480x480', scale: 2 | img_tag: section.settings.promo_2.alt, 'dt-sc-noscript-image' }}
              </noscript>
            </div>
            {% endif%}   
            {% if section.settings.promo_2_link != blank %}
          </a>
          {% endif %}       
      </div> 
    </div>
  </div>
</div>
</div>
<script>
    var swiper = new Swiper('  #shopify-section-{{section.id}} .promo-block_swiper.swiper-container', {
      spaceBetween: 30,
      effect: 'fade',      
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
